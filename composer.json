{
	"name": "misfist/quincy",
	"description": "Custom WordPress theme based on wd_s",
	"type": "wordpress-theme",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Pea Lutz",
			"email": "pea@pealutz.me"
		}
	],
	"config": {
		"platform": {
			"php": "8.0"
		},
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"sort-packages": true
	},
	"require": {
		"composer/installers": "^1.5 || ^2.0.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
		"php-stubs/acf-pro-stubs": "6.0.6",
		"phpcompatibility/phpcompatibility-wp": "^2.1.4",
		"wp-cli/wp-cli-bundle": "^2.7.1",
		"wp-coding-standards/wpcs": "^2.3.0"
	},
	"scripts": {
		"format": "phpcbf --report=summary,source",
		"lint": "phpcs --report=code",
		"report": "phpcs --report=info",
		"pot": "wp i18n make-pot . build/languages/quincy.pot --exclude=node_modules,vendor,build --allow-root"
	}
}
